{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"types": ["element-plus/global"],
		"paths": {
			// 增加项目别名 让文件中可以使用 @
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/auto-import.d.ts", "types/components.d.ts", "types/vite-env.d.ts"],
	"exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
